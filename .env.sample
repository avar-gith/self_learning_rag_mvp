###############################################################################
# Django alap beállítások
###############################################################################

# Fejlesztési mód (élesben False)
DJANGO_DEBUG=True

# Engedélyezett hostok vesszővel elválasztva
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django titkos kulcs – generálj sajátot fejlesztésre
DJANGO_SECRET_KEY=ccais.your-secret-key

# Django settings modul
DJANGO_SETTINGS_MODULE=project.settings


###############################################################################
# Általános Python környezeti változók
###############################################################################

# Azonnali kimenet a konzolra (debughoz hasznos)
PYTHONUNBUFFERED=1

# Opcionális: projekt könyvtár explicit hozzáadása a PYTHONPATH-hoz
PYTHONPATH=/app


###############################################################################
# PlutoAI integráció
# Ezek a változók szükségesek a PlutoAI API használatához.
###############################################################################

PLUTOAI_API_KEY=your-pluto-api-key             # Szükséges: PlutoAI API kulcs 
PLUTOAI_BASE_URL=https://plutoaidev.telekom.intra/oai
PLUTOAI_MODEL=gemini-2.0-flash                 # Használt modell neve
PLUTOAI_VERIFY_SSL=False                       # Oktatási környezetben False maradhat


###############################################################################
# OpenAI integráció
# Ezek szükségesek, ha OpenAI modelleket szeretnél meghívni.
###############################################################################

OPENAI_API_KEY=your-openai-api-key             # Szükséges: OpenAI API kulcs
OPENAI_MODEL=gpt-4o-mini                       # Alap modell név


###############################################################################
# Perplexity AI integráció
# Ezekkel lehet a Perplexity Chat Completion API-t használni.
###############################################################################

PER_API_KEY=your-perplexity-api-key            # Szükséges: Perplexity API kulcs
PER_BASE_URL=https://api.perplexity.ai         # Alap URL az API-hoz
